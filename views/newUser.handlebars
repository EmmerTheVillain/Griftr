<h2>New User</h2>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">email:</label>
    <input class="form-input" type="text" id="email-newUser" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-newUser" />
  </div>
  <div class="form-group">
    <label for="password-confirm">confirm password:</label>
    <input class="form-input" type="password" id="password-confirm" />
  </div>
  <div class="form-group">
    <label for="email-login">first name:</label>
    <input class="form-input" type="text" id="firstName-newUser" />
  </div>
  <div class="form-group">
    <label for="email-login">last name:</label>
    <input class="form-input" type="text" id="lastName-newUser" />
  </div>
  <div class="form-group">
    <label for="email-login">username:</label>
    <input class="form-input" type="text" id="username-newUser" />
  </div>
  <div class="form-group">
  <label for="user-bio">Bio:</label>
  <textarea class="form-input" id="user-bio" rows="4"></textarea>
</div>

    <div class="form-group">
    <label for="user-type">User Type:</label>
    <select class="form-input" id="user-type" name="user-type">
      <option value="business_owner">Business Owner</option>
      <option value="content_creator">Content Creator</option>
    </select>
  </div>
    <div class="form-group">
    <label for="user-avatar">Avatar:</label>
    <select class="form-input" id="user-avatar" name="user-avatar">
      <option value="dog">dog</option>
      <option value="beanie">beanie</option>
      <option value="ball">ball</option>
      <option value="Blue-Face-Man">blue face guy</option>
      <option value="skull">skull</option>
      <option value="dragon">dragon</option>
      <option value="Pirate">pirate</option>
      <option value="Panda">panda</option>
      <option value="haggard_anime_girl">girl</option>
      <option value="Monkey">monkey</option>
    </select>
  </div>
  <div class="form-group">
    <button class="btn btn-primary login-btn" type="submit">Create New User</button>
  </div>
</form>

<script src="/js/newUser.js"></script>
