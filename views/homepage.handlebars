
<div class="container flex justify-space-between main-card">
  <div class ="row justify-content-center align-items-end">
    <img src="/images/{{user.avatar}}.avif" class="img-responsive mw-75" style="width: 100%; min-height: 50%" alt="user image">
    <div class="name-card row">
      <h3 class = "col-3">{{user.first}}</h3>
      <p class="col-8">{{user.bio}}</p>
      <p hidden="true" id="user_id">{{user.id}}</p>
    </div>
  </div>
</div>

<div class="row justify-content-between fixed-bottom p-2">
  <div class="col-4">
    <button type ="button" class="btn btn-primary skip-btn" id="skip">Skip</button>
  </div>
   <div class="col-4">
  <button type="button" class="btn btn-primary match-btn p-2" id="match-button">
   Matches
</button>
  </div>
  <div class="col-4">
  <button type="button" class="btn btn-primary like-btn p-2" id="like">Like </button>
  </div>
</div>

